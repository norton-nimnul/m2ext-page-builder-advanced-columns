<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <fieldset name="general" sortOrder="20">
        <field name="gap" sortOrder="25" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string"></item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Gap Size</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <captionValue>Select Grid Gap</captionValue>
                        <options class="NortN\PageBuilderAdvancedColumns\Model\Config\Source\GapSizesOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
